{% comment %}
  Guarantee Section - Trust and guarantee messaging
{% endcomment %}

<section class="guarantee section">
  <div class="container container--narrow">
    <div class="guarantee__content">
      <div class="guarantee__icon">
        <svg class="icon icon--lg" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 1L3 5V11C3 16.55 6.84 21.74 12 23C17.16 21.74 21 16.55 21 11V5L12 1ZM10 17L6 13L7.41 11.59L10 14.17L16.59 7.58L18 9L10 17Z" fill="currentColor"/>
        </svg>
      </div>

      {% if section.settings.heading != blank %}
        <h2 class="text-center">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <p class="guarantee__description text-center">
          {{ section.settings.description }}
        </p>
      {% endif %}

      <div class="guarantee__badges">
        <div class="guarantee-badge">
          <svg class="icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" fill="currentColor"/>
          </svg>
          <div>
            <strong>30-Day Guarantee</strong>
            <p>Love it or your money back</p>
          </div>
        </div>

        <div class="guarantee-badge">
          <svg class="icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 1L3 5V11C3 16.55 6.84 21.74 12 23C17.16 21.74 21 16.55 21 11V5L12 1Z" fill="currentColor"/>
          </svg>
          <div>
            <strong>Secure Checkout</strong>
            <p>SSL encrypted & safe</p>
          </div>
        </div>

        <div class="guarantee-badge">
          <svg class="icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M20 8h-3V4H3c-1.1 0-2 .9-2 2v11h2c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h2v-5l-3-4zM6 18.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm13.5-9l1.96 2.5H17V9.5h2.5zm-1.5 9c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z" fill="currentColor"/>
          </svg>
          <div>
            <strong>Fast Shipping</strong>
            <p>Quick delivery worldwide</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .guarantee {
    background: white;
  }

  .guarantee__content {
    text-align: center;
  }

  .guarantee__icon {
    margin-bottom: 1.5rem;
  }

  .guarantee__icon .icon {
    fill: var(--color-secondary);
    margin: 0 auto;
  }

  .guarantee__description {
    font-size: 1.125rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto 3rem;
  }

  .guarantee__badges {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-top: 2rem;
  }

  .guarantee-badge {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
    text-align: left;
  }

  .guarantee-badge .icon {
    flex-shrink: 0;
    fill: var(--color-secondary);
  }

  .guarantee-badge strong {
    display: block;
    font-size: 1.125rem;
    margin-bottom: 0.25rem;
  }

  .guarantee-badge p {
    font-size: 0.875rem;
    color: #666;
    margin: 0;
  }

  @media (max-width: 768px) {
    .guarantee__badges {
      grid-template-columns: 1fr;
    }
  }
</style>

{% schema %}
{
  "name": "Guarantee",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Risk-Free Purchase"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Try ShedAway risk-free for 30 days. If you're not completely satisfied, we'll refund your purchase - no questions asked."
    }
  ],
  "presets": [
    {
      "name": "Guarantee"
    }
  ]
}
{% endschema %}
