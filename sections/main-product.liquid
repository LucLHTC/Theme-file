        max-width: calc(100% - {{ settings.quick_view_product_gallery_width }}%);
      }

      .quick-add-modal__content-info {
        max-height: {{ settings.quick_view_height }}rem;
        height: {{ settings.quick_view_height }}rem;
      }
    }

