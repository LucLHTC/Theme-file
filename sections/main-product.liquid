  <style>
    /* ========== SWATCH KING: HIDE MAAT DROPDOWN ========== */
    /* This uses multiple methods to ensure the dropdown is hidden */
    
    /* Method 1: Hide by ID - Swatch King typically uses swatch-option1, swatch-option2, etc. */
    #MainProduct-{{ section.id }} variant-swatch-king div[id*="swatch-option2"],
    #MainProduct-{{ section.id }} variant-swatch-king div[id*="-option2"],
    #MainProduct-{{ section.id }} variant-swatch-king .swatch-option2 {
      display: none !important;
      visibility: hidden !important;
      height: 0 !important;
      max-height: 0 !important;
      overflow: hidden !important;
      margin: 0 !important;
      padding: 0 !important;
      opacity: 0 !important;
    }
    
    /* Method 2: Hide any div that contains a select element (dropdown) but NOT images (swatches) */
    #MainProduct-{{ section.id }} variant-swatch-king > div:has(select):not(:has(img)) {
      display: none !important;
    }
    
    /* Method 3: Hide second child (Kleur is first, Maat is second) - MOST RELIABLE */
    #MainProduct-{{ section.id }} variant-swatch-king > div:nth-child(2) {
      display: none !important;
      visibility: hidden !important;
      height: 0 !important;
      overflow: hidden !important;
      position: absolute !important;
      left: -9999px !important;
    }
    
    /* Method 4: Keep first option visible (Kleur with images) */
    #MainProduct-{{ section.id }} variant-swatch-king > div:first-child {
      display: block !important;
      visibility: visible !important;
      height: auto !important;
      opacity: 1 !important;
    }
  </style>
  
  <script>
    // Hide Maat (dropdown with label) but keep Kleur (square swatches) - runs after Swatch King loads
    (function() {
      function hideSwatchKingMaat() {
        const swatchKing = document.querySelector('#MainProduct-{{ section.id }} variant-swatch-king');
        if (!swatchKing) {
          return; // Will retry later
        }
        
        // Method 1: Hide by nth-child (most reliable - Maat is always second)
        const allOptions = swatchKing.querySelectorAll(':scope > div');
        if (allOptions.length >= 2) {
          // Keep first (Kleur with images), hide second+ (Maat with dropdown)
          allOptions.forEach(function(option, index) {
            if (index === 0) {
              // This is Kleur - keep it visible
              option.style.cssText = 'display: block !important; visibility: visible !important; opacity: 1 !important;';
            } else {
              // This is Maat or anything else - hide it
              option.style.cssText = 'display: none !important; visibility: hidden !important; height: 0 !important; overflow: hidden !important; margin: 0 !important; padding: 0 !important; opacity: 0 !important; position: absolute !important; left: -9999px !important;';
            }
          });
          console.log('✓ Swatch King: Kept Kleur (option 1), hid Maat (option 2+)');
        }
        
        // Method 2: Also hide by ID pattern
        const option2Elements = swatchKing.querySelectorAll('[id*="option2"], [id*="-option2"], .swatch-option2');
        option2Elements.forEach(function(el) {
          el.style.cssText = 'display: none !important; visibility: hidden !important; height: 0 !important; position: absolute !important; left: -9999px !important;';
        });
        
        // Method 3: Hide anything with select but no images
        const optionsWithSelect = swatchKing.querySelectorAll(':scope > div');
        optionsWithSelect.forEach(function(option) {
          const hasSelect = option.querySelector('select') !== null;
          const hasImages = option.querySelectorAll('img, [style*="background-image"]').length > 0;
          
          if (hasSelect && !hasImages) {
            option.style.cssText = 'display: none !important; visibility: hidden !important; height: 0 !important; position: absolute !important; left: -9999px !important;';
            console.log('✓ Hiding dropdown (has select, no images)');
          }
        });
      }
      
      // Run multiple times to catch Swatch King loading
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', function() {
          hideSwatchKingMaat();
          setTimeout(hideSwatchKingMaat, 100);
          setTimeout(hideSwatchKingMaat, 300);
          setTimeout(hideSwatchKingMaat, 500);
        });
      } else {
        hideSwatchKingMaat();
        setTimeout(hideSwatchKingMaat, 100);
        setTimeout(hideSwatchKingMaat, 300);
        setTimeout(hideSwatchKingMaat, 500);
      }
    })();
  </script>

