<script>
(function(){
  var ROOT = document.querySelector('#MainProduct-{{ section.id }}');
  if(!ROOT) return;

  var mq = window.matchMedia('(max-width: 989px)');

  function findPaymentBlock(){
    var node = ROOT.querySelector('.product__payment');
    return node || null;
  }

  function nodeHasReviewText(el){
    if(!el) return false;
    var txt = (el.textContent || '').toLowerCase();
    return (
      (txt.includes('rated') && txt.includes('reviews')) ||
      txt.includes('beoordelingen') ||
      (txt.includes('reviews') && txt.includes('5'))
    );
  }

  function looksLikeReviews(el){
    if(!el) return false;
    if (el.matches('.trustpilot-widget, .tp-widget, [class*="reviews"], [class*="review"]')) return true;
    if (nodeHasReviewText(el)) return true;
    return false;
  }

  function findReviewsBlock(){
    var direct = ROOT.querySelector('.trustpilot-widget, .tp-widget, [class*="product_reviews"], [class*="product-reviews"]');
    if (direct) return direct;

    var blocks = ROOT.querySelectorAll('.block');
    var candidates = [];
    blocks.forEach(function(b){
      if (looksLikeReviews(b) || looksLikeReviews(b.firstElementChild)){
        candidates.push(b);
      } else {
        var found = b.querySelector('.trustpilot-widget, .tp-widget, [class*="reviews"], [class*="review"]');
        if (found || nodeHasReviewText(b)) candidates.push(found || b);
      }
    });
    if (!candidates.length) return null;
    candidates.sort(function(a,b){ return (b.outerHTML||'').length - (a.outerHTML||'').length; });
    return candidates[0];
  }

  function ensureMobileAnchor(){
    var anchor = ROOT.querySelector('#mlb-mobile-reviews-anchor');
    if (anchor) return anchor;
    var pay = findPaymentBlock();
    if (!pay) return null;
    anchor = document.createElement('div');
    anchor.id = 'mlb-mobile-reviews-anchor';
    pay.insertAdjacentElement('afterend', anchor);
    return anchor;
  }

  var orig = { parent:null, next:null, captured:false };

  function captureOriginal(reviews){
    if (orig.captured || !reviews || !reviews.parentNode) return;
    orig.parent = reviews.parentNode;
    orig.next   = reviews.nextSibling;
    orig.captured = true;
  }

  function moveToMobile(reviews){
    var anchor = ensureMobileAnchor();
    if (!anchor) return;
    captureOriginal(reviews);
    if (anchor.nextSibling !== reviews){
      reviews.classList.add('mlb-moved-reviews');
      anchor.parentNode.insertBefore(reviews, anchor.nextSibling);
    }
  }

  function restoreDesktop(reviews){
    if (!orig.captured || !reviews) return;
    reviews.classList.remove('mlb-moved-reviews');
    if (orig.next) orig.parent.insertBefore(reviews, orig.next);
    else orig.parent.appendChild(reviews);
  }

  function relocate(){
    var reviews = findReviewsBlock();
    if (!reviews) return;
    if (mq.matches){ moveToMobile(reviews); }
    else { restoreDesktop(reviews); }
  }

  var t; function schedule(){ clearTimeout(t); t = setTimeout(relocate, 80); }

  document.addEventListener('DOMContentLoaded', schedule);
  window.addEventListener('load', schedule);
  window.addEventListener('resize', schedule);
  mq.addEventListener ? mq.addEventListener('change', schedule) : mq.addListener(schedule);

  var mo = new MutationObserver(schedule);
  mo.observe(ROOT, {subtree:true, childList:true});

  if (window.Shopify && Shopify.designMode){
    var lastIsMobile = null;
    setInterval(function(){
      var nowIsMobile = window.innerWidth < 990;
      if (nowIsMobile !== lastIsMobile){
        lastIsMobile = nowIsMobile;
        schedule();
      }
    }, 250);
    document.addEventListener('shopify:section:load', schedule);
    document.addEventListener('shopify:section:unload', schedule);
    document.addEventListener('shopify:section:select', schedule);
    document.addEventListener('shopify:section:deselect', schedule);
    document.addEventListener('visibilitychange', schedule);
  }

  schedule();
})();
</script>


