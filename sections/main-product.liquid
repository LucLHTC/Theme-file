  <script>
    // Move review section below BOTTOM review summary (after buy buttons) on mobile
    // NOTE: There are TWO review summaries - one at top (above title), one at bottom (after buy buttons)
    // We want to insert after the BOTTOM one
    (function() {
      function moveReviewSection() {
        const isMobile = window.innerWidth < 990;
        if (!isMobile) return;
        
        const reviewWrapper = document.querySelector('#MainProduct-{{ section.id }} .custom-liquid-wrapper');
        if (!reviewWrapper) return;
        
        const reviewBlock = reviewWrapper.closest('.block');
        if (!reviewBlock) return;
        
        // Find buy buttons block first - the bottom review summary should be after this
        const buyButtonsBlock = document.querySelector('#MainProduct-{{ section.id }} .buy-buttons-block');
        if (!buyButtonsBlock) {
          console.log('No buy buttons block found');
          return;
        }
        
        const buyButtonsParent = buyButtonsBlock.closest('.block');
        if (!buyButtonsParent) {
          console.log('No buy buttons parent block found');
          return;
        }
        
        // Find all review summaries
        const possibleSummaries = [
          '[class*="amose"]',
          '[class*="review-summary"]', 
          '[id*="amose"]',
          '.trustpilot-widget',
          '.stamped-badge',
          '[data-stamped-badge]',
          '.spr-badge'
        ];
        
        let allReviewSummaries = [];
        for (let selector of possibleSummaries) {
          const found = document.querySelectorAll('#MainProduct-{{ section.id }} ' + selector);
          found.forEach(function(el) {
            // Exclude the review section itself
            if (el !== reviewBlock && !reviewBlock.contains(el)) {
              allReviewSummaries.push(el);
            }
          });
        }
        
        console.log('Found ' + allReviewSummaries.length + ' review summary elements');
        
        // Find the review summary that comes AFTER the buy buttons (the bottom one)
        // We have TWO review summaries: one at top (above title) and one at bottom (below buy buttons)
        let bottomReviewSummary = null;
        
        // Method: Check DOM order instead of position
        // The bottom summary is the one that appears AFTER the buy buttons in DOM
        for (let i = 0; i < allReviewSummaries.length; i++) {
          let summary = allReviewSummaries[i];
          
          // Check if this summary comes after buy buttons in DOM tree
          let current = buyButtonsParent;
          let foundAfter = false;
          
          // Walk forward through siblings
          while (current) {
            current = current.nextElementSibling;
            if (!current) break;
            
            // Check if this sibling is or contains the summary
            if (current === summary || current.contains(summary) || summary.closest('.block') === current) {
              foundAfter = true;
              break;
            }
          }
          
          if (foundAfter) {
            bottomReviewSummary = summary;
            console.log('Found BOTTOM review summary (DOM order after buy buttons)');
            break;
          }
        }
        
        // Fallback: if multiple summaries found, take the last one
        if (!bottomReviewSummary && allReviewSummaries.length > 1) {
          bottomReviewSummary = allReviewSummaries[allReviewSummaries.length - 1];
          console.log('Using LAST review summary as bottom one');
        } else if (!bottomReviewSummary && allReviewSummaries.length === 1) {
          bottomReviewSummary = allReviewSummaries[0];
          console.log('Only ONE review summary found, using it');
        }
        
        let targetElement = null;
        
        if (bottomReviewSummary) {
          // Found the bottom review summary - insert review section after it
          targetElement = bottomReviewSummary.closest('.block') || bottomReviewSummary;
          console.log('Will insert after BOTTOM review summary');
        } else {
          // Fallback: No bottom review summary found, insert after payment icons
          const trustBadge = document.querySelector('#MainProduct-{{ section.id }} .mlb-trust-badge');
          if (trustBadge) {
            targetElement = trustBadge.closest('.block') || trustBadge.parentElement;
            console.log('No bottom review summary, will insert after trust badge');
          } else {
            // Last resort: insert after buy buttons
            targetElement = buyButtonsParent;
            console.log('Will insert after buy buttons block');
          }
        }
        
        // Perform the move
        if (targetElement && targetElement.parentElement && reviewBlock.parentElement) {
          // Only move if not already in correct position
          if (targetElement.nextElementSibling !== reviewBlock) {
            console.log('Moving review section to position after bottom element');
            targetElement.parentElement.insertBefore(reviewBlock, targetElement.nextElementSibling);
          } else {
            console.log('Review section already in correct position');
          }
        }
      }
      
      // Run multiple times with increasing delays to catch all elements loading
      function runWithDelays() {
        moveReviewSection(); // Immediate
        setTimeout(moveReviewSection, 100);
        setTimeout(moveReviewSection, 300);
        setTimeout(moveReviewSection, 500);
        setTimeout(moveReviewSection, 1000); // Final attempt after 1 second
        setTimeout(moveReviewSection, 1500); // Extra attempt for slow loading
      }
      
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', runWithDelays);
      } else {
        runWithDelays();
      }
      
      // Also run on resize (debounced)
      let resizeTimer;
      window.addEventListener('resize', function() {
        clearTimeout(resizeTimer);
        resizeTimer = setTimeout(moveReviewSection, 250);
      });
    })();
  </script>

