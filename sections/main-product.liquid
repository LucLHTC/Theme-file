<script>
(function(){
  /* ===== CONFIG ===== */
  var STOCK_MIN=2, STOCK_MAX=12;
  var LABEL_PREFIX='Voorraad: ';
  var SOLD_OUT_TEXT='Niet beschikbaar';
  var ROOT_SEL='#MainProduct-{{ section.id }}';

  /* ===== CSS (badge + uitlijning) ===== */
  (function(){
    if(document.getElementById('mlb-stock-badge-css')) return;
    var s=document.createElement('style');
    s.id='mlb-stock-badge-css';
    s.textContent=`
      [role="listbox"] [role="option"].mlb-flexline{
        display:flex!important; align-items:center; gap:8px;
      }
      .mlb-rightwrap{ margin-left:auto; display:inline-flex; align-items:center; gap:8px; min-width:fit-content; }
      .mlb-stock-badge{
        display:inline-flex; align-items:center; white-space:nowrap;
        font-size:12px; line-height:1; font-weight:600;
        padding:2px 7px; border-radius:999px;
        background:#FFF4EA; border:1px solid #FFB784; color:#8A4200; flex:0 0 auto;
      }`;
    document.head.appendChild(s);
  })();

  /* ===== PRODUCT DATA ===== */
  var PRODUCT={
    id: {{ product.id }},
    options_with_values: {{ product.options_with_values | json }},
    variants: [{% for v in product.variants -%}
      { id: {{ v.id }}, available: {{ v.available | json }},
        option1: {{ v.option1 | json }}, option2: {{ v.option2 | json }}, option3: {{ v.option3 | json }} }
      {% unless forloop.last %},{% endunless %}{% endfor %}]
  };

  /* ===== HELPERS ===== */
  function norm(s){return (s==null?'':String(s)).replace(/\u00A0/g,' ').replace(/\s+/g,' ').trim();}
  function root(){return document.querySelector(ROOT_SEL);}
  function optIndex(names){
    var a=PRODUCT.options_with_values||[];
    for(var i=0;i<a.length;i++){
      var n=norm(a[i].name).toLowerCase();
      for(var j=0;j<names.length;j++) if(n.indexOf(names[j])>-1) return i;
    } return -1;
  }
  var colorIdx=optIndex(['kleur','color','colour']), sizeIdx=optIndex(['maat','size']);
  if(sizeIdx===-1) return;

  var sizeName=PRODUCT.options_with_values[sizeIdx].name;
  var sizeValues=(PRODUCT.options_with_values[sizeIdx].values||[]).map(norm);

  function getOptionValue(idx){
    var r=root(); if(!r) return null;
    var opt=PRODUCT.options_with_values[idx]; if(!opt) return null;
    var name=opt.name;

    // 1) select[name="options[Name]"]
    var sel=r.querySelector('select[name="options['+name+']"]');
    if(sel && sel.value) return norm(sel.value);

    // 2) select in [data-index="optionX"]
    sel=r.querySelector('[data-index="option'+(idx+1)+'"] select');
    if(sel && sel.value) return norm(sel.value);

    // 3) radio[name="options[Name]"]
    var radio=r.querySelector('input[type="radio"][name="options['+name+']"]:checked');
    if(radio && radio.value) return norm(radio.value);

    // 4) “button/ swatch” varianten binnen het containerblok
    var cont=r.querySelector('[data-index="option'+(idx+1)+'"]')||r;
    var picked=cont.querySelector('[aria-checked="true"],[aria-selected="true"],[data-selected="true"],.is-selected,.selected,[data-current="true"]');
    if(picked){
      var v=picked.getAttribute('data-value')||picked.getAttribute('aria-label')||picked.textContent;
      if(v) return norm(v);
    }

    // 5) val terugvallen op huidige variant (als die er is)
    var vNow=currentVariant();
    if(vNow){
      var v=vNow['option'+(idx+1)];
      if(v) return norm(v);
    }
    return null;
  }

  function currentVariant(){
    var r=root(); if(!r) return null;
    var idInput=r.querySelector('form[action*="/cart/add"] input[name="id"], input[name="id"]');
    if(!idInput) return null;
    var vid=parseInt(idInput.value,10); if(!vid) return null;
    for(var i=0;i<PRODUCT.variants.length;i++){ if(PRODUCT.variants[i].id===vid) return PRODUCT.variants[i]; }
    return null;
  }

  function lsKey(pid,color){return 'pseudoStock:'+pid+':'+(color||'—');}
  function readMap(pid,color){try{return JSON.parse(localStorage.getItem(lsKey(pid,color)))||{};}catch(e){return {};}}
  function writeMap(pid,color,obj){try{localStorage.setItem(lsKey(pid,color),JSON.stringify(obj));}catch(e){}}
  function ensureMap(color){
    var map=readMap(PRODUCT.id,color), changed=false;
    sizeValues.forEach(function(s){ if(map[s]==null){ map[s]=Math.floor(Math.random()*(STOCK_MAX-STOCK_MIN+1))+STOCK_MIN; changed=true; }});
    if(changed) writeMap(PRODUCT.id,color,map);
    return map;
  }

  function variantExistsFor(color,size){
    color=norm(color); size=norm(size);
    return PRODUCT.variants.some(function(v){
      var vs=norm(v['option'+(sizeIdx+1)]);
      var vc=colorIdx===-1?'':norm(v['option'+(colorIdx+1)]);
      return (vs===size) && (colorIdx===-1 || vc===color);
    });
  }
  function variantExistsAnyColor(size){
    size=norm(size);
    return PRODUCT.variants.some(function(v){return norm(v['option'+(sizeIdx+1)])===size;});
  }
  function isAvailable(color,size){
    if(variantExistsFor(color,size)) return true;
    if(variantExistsAnyColor(size)) return true;
    return false;
  }

  function getSizeSelects(){
    var r=root(); if(!r) return [];
    var out=[];
    r.querySelectorAll('select[name="options['+sizeName+']"]').forEach(el=>out.push(el));
    if(out.length===0) r.querySelectorAll('[data-index="option'+(sizeIdx+1)+'"] select').forEach(el=>out.push(el));
    return out;
  }
  function getListboxItems(){
    var r=root(); if(!r) return [];
    var cont=r.querySelector('[data-index="option'+(sizeIdx+1)+'"]')||r;
    return Array.from(cont.querySelectorAll('[role="listbox"] [role="option"]'));
  }
  function sizeFromItem(el){
    var v=el.getAttribute('data-value')||(el.dataset?el.dataset.value:null);
    if(v) return norm(v);
    var raw=(el.textContent||'').split('€')[0];
    return norm(raw);
  }
  function findPriceEl(item){
    var cand=item.querySelector('[class*="price"], .money, [class*="Price"], [class*="amount"]');
    if(cand) return cand;
    var kids=Array.from(item.children);
    for(var i=0;i<kids.length;i++){
      var t=(kids[i].textContent||'').trim();
      if(/€\s*\d+/.test(t)||/\d+,\d{2}/.test(t)) return kids[i];
    }
    return null;
  }

  function updateSelect(map,color){
    getSizeSelects().forEach(function(sel){
      sel.querySelectorAll('option').forEach(function(opt){
        if(!opt.dataset.origLabel) opt.dataset.origLabel=opt.textContent.trim();
        var size=norm(opt.value||opt.textContent);
        var base=opt.dataset.origLabel;
        var label;
        if(!isAvailable(color,size)){
          label=base+' — '+SOLD_OUT_TEXT;
        }else{
          var n=map[size]||STOCK_MIN;
          label=base+' — '+LABEL_PREFIX+n;
        }
        opt.textContent=label;
      });
    });
  }

  function updateListbox(map,color){
    getListboxItems().forEach(function(item){
      item.classList.add('mlb-flexline');
      var priceEl=findPriceEl(item);
      var right=item.querySelector('.mlb-rightwrap');
      if(!right){
        right=document.createElement('span');
        right.className='mlb-rightwrap';
        if(priceEl){ priceEl.parentNode.insertBefore(right,priceEl); right.appendChild(priceEl); }
        else{ item.appendChild(right); }
      }
      right.querySelectorAll('.mlb-stock-badge').forEach(n=>n.remove());

      var size=sizeFromItem(item);
      var badge=document.createElement('span');
      badge.className='mlb-stock-badge';
      if(!isAvailable(color,size)){ badge.textContent=SOLD_OUT_TEXT; }
      else{
        var n=map[size]||STOCK_MIN;
        badge.textContent=LABEL_PREFIX+n;
      }
      right.insertBefore(badge,right.firstChild);
    });
  }

  var scheduled=false;
  function schedule(){ if(scheduled) return; scheduled=true; setTimeout(function(){scheduled=false; updateAll();},20); }

  function updateAll(){
    var colorVal = (colorIdx>-1 ? getOptionValue(colorIdx) : '—') || '—';
    var map = ensureMap(colorVal);
    updateSelect(map,colorVal);
    updateListbox(map,colorVal);
  }

  function bind(){
    var r=root(); if(!r) return;

    // alle optie-controls (select/radio) → change
    r.addEventListener('change', function(e){
      var t=e.target;
      if(t && t.name && /^options\[/i.test(t.name)) schedule();
      if(t && t.name==='id') schedule();
    }, true);

    // clicks/keyboard op swatches/optieblokken
    r.addEventListener('click', function(e){
      if(e.target.closest('[data-index^="option"]') || e.target.closest('.swatch') || e.target.closest('[data-swatch]') || e.target.closest('.product-form__input')){
        schedule();
      }
    }, true);
    r.addEventListener('keyup', function(e){
      if(e.key==='Enter' || e.key===' ') schedule();
    }, true);

    // veel voorkomende custom events
    ['variant:change','variant:changed','product:variant-change','variant-change','variantchanged']
      .forEach(function(evt){ document.addEventListener(evt, schedule, true); });

    // observe hele subtree (DOM wissels door theme JS)
    var mo=new MutationObserver(schedule);
    mo.observe(r,{subtree:true,childList:true,attributes:true,characterData:true});
  }

  document.addEventListener('DOMContentLoaded', function(){
    updateAll();
    bind();
    setTimeout(updateAll,150);
  });
})();
