{% comment %}
  Reviews Carousel - Customer testimonials
{% endcomment %}

<section class="reviews section--lg">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2 class="text-center mb-4">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="reviews__grid grid grid--3">
      {% for block in section.blocks %}
        {% if block.type == 'review' %}
          <div class="review-card card">
            <div class="review-card__stars">
              {% render 'review-stars', rating: block.settings.rating %}
            </div>
            <p class="review-card__text">"{{ block.settings.review_text }}"</p>
            <div class="review-card__author">
              <strong>{{ block.settings.author_name }}</strong>
              {% if block.settings.author_location != blank %}
                <span class="review-card__location">{{ block.settings.author_location }}</span>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .reviews {
    background: var(--color-primary);
  }

  .review-card {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .review-card__stars {
    margin-bottom: 1rem;
  }

  .review-card__text {
    flex: 1;
    font-size: 1rem;
    line-height: 1.7;
    color: var(--color-dark);
    margin-bottom: 1.5rem;
    font-style: italic;
  }

  .review-card__author {
    font-size: 0.9375rem;
  }

  .review-card__author strong {
    display: block;
    margin-bottom: 0.25rem;
  }

  .review-card__location {
    color: #666;
    font-size: 0.875rem;
  }
</style>

{% schema %}
{
  "name": "Reviews",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Loved by Pet Owners Everywhere"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "range",
          "id": "rating",
          "label": "Rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        },
        {
          "type": "textarea",
          "id": "review_text",
          "label": "Review Text",
          "default": "This glove is amazing! My furniture finally stays clean."
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Author Name",
          "default": "Sarah M."
        },
        {
          "type": "text",
          "id": "author_location",
          "label": "Author Location",
          "default": "Amsterdam, NL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Reviews",
      "blocks": [
        {
          "type": "review"
        },
        {
          "type": "review"
        },
        {
          "type": "review"
        }
      ]
    }
  ]
}
{% endschema %}
