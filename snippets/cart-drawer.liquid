{% comment %}
  AJAX Cart Drawer
{% endcomment %}

<div class="cart-drawer" data-cart-drawer>
  <div class="cart-drawer__header">
    <h2 class="cart-drawer__title">Your Cart</h2>
    <button class="cart-drawer__close" data-cart-close aria-label="Close cart">
      <svg class="icon icon--sm" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z" fill="currentColor"/>
      </svg>
    </button>
  </div>

  {% if settings.free_shipping_threshold > 0 %}
    <div class="cart-drawer__shipping">
      <div class="shipping-progress-bar">
        <div class="shipping-progress-fill" data-shipping-progress style="width: 0%"></div>
      </div>
      <p class="shipping-progress-text" data-shipping-text>
        Add {{ settings.free_shipping_threshold | money }} for free shipping
      </p>
    </div>
  {% endif %}

  <div class="cart-drawer__items" data-cart-items>
    {% if cart.item_count == 0 %}
      <p class="cart-empty">Your cart is empty</p>
    {% else %}
      {% for item in cart.items %}
        <div class="cart-item">
          <div class="cart-item__image">
            {% if item.image %}
              <img src="{{ item.image | image_url: width: 120 }}" alt="{{ item.title }}">
            {% endif %}
          </div>
          <div class="cart-item__details">
            <h4 class="cart-item__title">{{ item.product.title }}</h4>
            {% if item.variant.title != 'Default Title' %}
              <p class="cart-item__variant">{{ item.variant.title }}</p>
            {% endif %}
            <p class="cart-item__price">{{ item.final_line_price | money }}</p>
          </div>
          <div class="cart-item__quantity">
            <input
              type="number"
              value="{{ item.quantity }}"
              min="0"
              data-cart-quantity
              data-line-key="{{ forloop.index }}"
              class="quantity-input"
            >
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </div>

  {% if settings.cart_show_upsell and cart.item_count > 0 %}
    <div class="cart-drawer__upsell">
      <p class="upsell-text">ðŸ’¡ Buy more, save more!</p>
    </div>
  {% endif %}

  <div class="cart-drawer__footer">
    <div class="cart-subtotal">
      <span>Subtotal:</span>
      <span class="cart-subtotal__amount" data-cart-subtotal>{{ cart.total_price | money }}</span>
    </div>
    <p class="cart-shipping-note">Shipping calculated at checkout</p>
    <a href="{{ routes.cart_url }}" class="btn btn--outline btn--full mb-2">View Cart</a>
    <button type="submit" name="checkout" class="btn btn--primary btn--full" onclick="window.location.href='/checkout'">
      Checkout
    </button>
  </div>
</div>

<div class="cart-drawer__overlay" data-cart-overlay></div>

<style>
  .cart-drawer {
    position: fixed;
    top: 0;
    right: -100%;
    width: 90%;
    max-width: 420px;
    height: 100vh;
    background: white;
    z-index: 3000;
    transition: right 0.3s ease;
    box-shadow: -4px 0 20px rgba(0, 0, 0, 0.15);
    display: flex;
    flex-direction: column;
  }

  .cart-drawer.active {
    right: 0;
  }

  .cart-drawer__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .cart-drawer__title {
    font-size: 1.5rem;
    margin: 0;
  }

  .cart-drawer__close {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .cart-drawer__shipping {
    padding: 1rem 1.5rem;
    background: var(--color-primary);
  }

  .shipping-progress-bar {
    width: 100%;
    height: 8px;
    background: rgba(0, 0, 0, 0.1);
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: 0.5rem;
  }

  .shipping-progress-fill {
    height: 100%;
    background: var(--color-secondary);
    transition: width 0.3s ease;
  }

  .shipping-progress-text {
    font-size: 0.875rem;
    text-align: center;
    margin: 0;
  }

  .cart-drawer__items {
    flex: 1;
    overflow-y: auto;
    padding: 1.5rem;
  }

  .cart-empty {
    text-align: center;
    padding: 3rem 1rem;
    color: #666;
  }

  .cart-item {
    display: flex;
    gap: 1rem;
    padding-bottom: 1rem;
    margin-bottom: 1rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  }

  .cart-item:last-child {
    border-bottom: none;
  }

  .cart-item__image {
    width: 80px;
    height: 80px;
    border-radius: 8px;
    overflow: hidden;
    background: var(--color-primary);
    flex-shrink: 0;
  }

  .cart-item__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cart-item__details {
    flex: 1;
  }

  .cart-item__title {
    font-size: 1rem;
    margin-bottom: 0.25rem;
  }

  .cart-item__variant {
    font-size: 0.875rem;
    color: #666;
    margin-bottom: 0.5rem;
  }

  .cart-item__price {
    font-weight: 600;
    color: var(--color-secondary);
    margin: 0;
  }

  .cart-item__quantity {
    display: flex;
    align-items: flex-start;
  }

  .quantity-input {
    width: 60px;
    padding: 0.5rem;
    border: 1px solid rgba(0, 0, 0, 0.2);
    border-radius: 4px;
    text-align: center;
    font-weight: 600;
  }

  .cart-drawer__upsell {
    padding: 1rem 1.5rem;
    background: #FFF9E6;
    border-top: 1px solid rgba(0, 0, 0, 0.06);
  }

  .upsell-text {
    font-size: 0.875rem;
    text-align: center;
    margin: 0;
  }

  .cart-drawer__footer {
    padding: 1.5rem;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  .cart-subtotal {
    display: flex;
    justify-content: space-between;
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .cart-subtotal__amount {
    color: var(--color-secondary);
  }

  .cart-shipping-note {
    font-size: 0.875rem;
    color: #666;
    text-align: center;
    margin-bottom: 1rem;
  }

  .cart-drawer__overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 2999;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .cart-drawer__overlay.active {
    opacity: 1;
    pointer-events: all;
  }
</style>
