<!-- Script om te garanderen dat het onder de payment-icons blijft staan -->
<script>
  (function () {
    const FOOTER_SEL = '#main-cart-footer';
    const PAY_IMG_SELECTOR = "img[src*='Biztonsagos_fizetes_25.png']";

    function placeSocialProof() {
      const root = document.querySelector(FOOTER_SEL);
      if (!root) return;

      const payImg = root.querySelector(PAY_IMG_SELECTOR);
      const bubble = root.querySelector('.mlb-socialproof');
      if (!payImg || !bubble) return;

      // Vind container van betaalicons
      const iconContainer =
        payImg.closest('.cart__dynamic-checkout-buttons') ||
        payImg.parentElement;

      if (!iconContainer) return;

      // Plaats bubble direct onder die container
      const target = bubble.closest('.mlb-socialproof') || bubble;
      if (iconContainer.nextElementSibling !== target) {
        iconContainer.insertAdjacentElement('afterend', target);
      }
    }

    document.addEventListener('DOMContentLoaded', placeSocialProof);
    ['cart:updated','cart:refresh','ajaxProduct:added','cart:change'].forEach(evt =>
      document.addEventListener(evt, placeSocialProof)
    );

    const mo = new MutationObserver(placeSocialProof);
    mo.observe(document.body, { childList: true, subtree: true });
  })();
</script>
