{% comment %}
  Trust Badges Component with Pulse Animations
{% endcomment %}

<div class="trust-badges">
  <div class="trust-badge">
    <svg class="icon icon--sm" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="currentColor"/>
    </svg>
    <span>{{ settings.product_shipping_text }}</span>
  </div>

  <div class="trust-badge trust-badge--highlight">
    <svg class="icon icon--sm" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M12 1L3 5V11C3 16.55 6.84 21.74 12 23C17.16 21.74 21 16.55 21 11V5L12 1ZM10 17L6 13L7.41 11.59L10 14.17L16.59 7.58L18 9L10 17Z" fill="currentColor"/>
    </svg>
    <span>{{ settings.product_guarantee_text }}</span>
  </div>

  <div class="trust-badge">
    <svg class="icon icon--sm" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M9 11H7V13H9V11ZM13 11H11V13H13V11ZM17 11H15V13H17V11ZM19 4H18V2H16V4H8V2H6V4H5C3.89 4 3.01 4.9 3.01 6L3 20C3 21.1 3.89 22 5 22H19C20.1 22 21 21.1 21 20V6C21 4.9 20.1 4 19 4ZM19 20H5V9H19V20Z" fill="currentColor"/>
    </svg>
    <span>Fast Delivery</span>
  </div>
</div>

<style>
  .trust-badge {
    transition: all 0.3s ease;
  }

  .trust-badge:hover {
    transform: scale(1.05);
  }

  .trust-badge--highlight .icon {
    animation: pulse-badge 2s ease-in-out infinite;
  }

  @keyframes pulse-badge {
    0%, 100% {
      transform: scale(1);
      opacity: 1;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.9;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .trust-badge--highlight .icon {
      animation: none;
    }
  }
</style>
